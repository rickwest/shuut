{% extends 'layouts/admin.html.twig' %}

{% block title %}Edit Customer{% endblock %}

{% block headerContent %}
    <h1 class="h3">Edit Customer<small class="text-muted"> - {{ customer.name }}</small></h1>
{% endblock %}

{% block content %}
    {{ form_start(form) }}
        <div class="row">
        <div class="col-md-7">
            <div class="card">
                <div class="card-header">
                    <strong>Basic Details</strong>
                </div>
                <div class="card-body">
                    {{ form_row(form.accountRef) }}
                    {{ form_row(form.name) }}
                    {{ form_row(form.contactName) }}
                    {{ form_row(form.telephone) }}
                    {{ form_row(form.fax) }}
                    {{ form_row(form.email) }}
                </div>
            </div>
        </div>
        <div class="col-md-5">
            <div class="card">
                <div class="card-header font-weight-bold">
                    Address
                </div>
                <div class="card-body">
                    {{ form_row(form.address.line1) }}
                    {{ form_row(form.address.line2) }}
                    {{ form_row(form.address.city) }}
                    {{ form_row(form.address.county) }}
                    <div class="row">
                        <div class="col-md-4">
                            {{ form_row(form.address.postcode) }}
                        </div>
                        <div class="form-group col-md-8">
                            {{ form_row(form.address.country) }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% include 'partials/crud/newEditActions.html.twig' with {routeNamePrefix: 'customer_'} %}
    {{ form_end(form) }}
{% endblock %}