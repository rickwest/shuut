{% extends 'layouts/admin.html.twig' %}

{% block title %}Customer index{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header">Customer index</div>
        <div class="card-body">
            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>AccountRef</th>
                    <th>Name</th>
                    <th>ContactName</th>
                    <th>Telephone</th>
                    <th>Fax</th>
                    <th>Email</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for customer in customers %}
                    <tr>
                        <td>{{ customer.id }}</td>
                        <td>{{ customer.accountRef }}</td>
                        <td>{{ customer.name }}</td>
                        <td>{{ customer.contactName }}</td>
                        <td>{{ customer.telephone }}</td>
                        <td>{{ customer.fax }}</td>
                        <td>{{ customer.email }}</td>
                        <td>
                            <a href="{{ path('customer_show', {'id': customer.id}) }}">show</a>
                            <a href="{{ path('customer_edit', {'id': customer.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="8">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('customer_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}