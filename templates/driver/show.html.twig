{% extends 'layouts/admin.html.twig' %}

{% block title %}Driver{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header"></div>
        <div class="card-body">
            <h1>Driver</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ driver.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ driver.name }}</td>
                </tr>
                <tr>
                    <th>Telephone</th>
                    <td>{{ driver.telephone }}</td>
                </tr>
                <tr>
                    <th>Email</th>
                    <td>{{ driver.email }}</td>
                </tr>
                <tr>
                    <th>Subcontractor</th>
                    <td>{{ driver.subcontractor ? 'Yes' : 'No' }}</td>
                </tr>
                <tr>
                    <th>TradingName</th>
                    <td>{{ driver.tradingName }}</td>
                </tr>
                <tr>
                    <th>VatNumber</th>
                    <td>{{ driver.vatNumber }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('driver_index') }}">back to list</a>

            <a href="{{ path('driver_edit', {'id': driver.id}) }}">edit</a>

            {{ include('driver/_delete_form.html.twig') }}
        </div>
    </div>

{% endblock %}
