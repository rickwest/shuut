<form method="post"style="display:inline-block" action="{{ path(routeNamePrefix ~'delete', {'id': id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ id) }}">
    <button class="btn btn-secondary"><i class="fa fa-trash"></i>&nbsp;Delete</button>
</form>
