{% extends 'layouts/admin.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header"></div>
        <div class="card-body">
            <h1>Vehicle</h1>

            <table class="table">
                <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ vehicle.id }}</td>
                </tr>
                <tr>
                    <th>Registration</th>
                    <td>{{ vehicle.registration }}</td>
                </tr>
                <tr>
                    <th>Width</th>
                    <td>{{ vehicle.width }}</td>
                </tr>
                <tr>
                    <th>Depth</th>
                    <td>{{ vehicle.depth }}</td>
                </tr>
                <tr>
                    <th>Height</th>
                    <td>{{ vehicle.height }}</td>
                </tr>
                <tr>
                    <th>Make</th>
                    <td>{{ vehicle.make }}</td>
                </tr>
                <tr>
                    <th>Model</th>
                    <td>{{ vehicle.model }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('vehicle_index') }}">back to list</a>

            <a href="{{ path('vehicle_edit', {'id': vehicle.id}) }}">edit</a>

            {{ include('vehicle/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
