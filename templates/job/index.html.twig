{% extends 'layouts/admin.html.twig' %}

{% block title %}Job index{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header"></div>
        <div class="card-body">
            <h1>Job index</h1>

            <table class="table">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>actions</th>
                </tr>
                </thead>
                <tbody>
                {% for job in jobs %}
                    <tr>
                        <td>{{ job.id }}</td>
                        <td>
                            <a href="{{ path('job_show', {'id': job.id}) }}">show</a>
                            <a href="{{ path('job_edit', {'id': job.id}) }}">edit</a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="2">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('job_new') }}">Create new</a>
        </div>
    </div>
{% endblock %}
