{% extends 'layouts/admin.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col-sm-6 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="h1 text-muted text-right mb-4">
                        <i class="icon-clock"></i>
                    </div>
                    <div class="text-value-lg" id="time"></div>
                    <small class="text-muted text-uppercase font-weight-bold">{{ "now"|date("D, d M Y") }}</small>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="h1 text-info text-right mb-4">
                        <i class="icon-direction"></i>
                    </div>
                    <div class="text-value-lg">-</div>
                    <small class="text-muted text-uppercase font-weight-bold">Jobs today</small>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="h1 text-success text-right mb-4">
                        <i class="icon-directions"></i>
                    </div>
                    <div class="text-value-lg">-</div>
                    <small class="text-muted text-uppercase font-weight-bold">Jobs this week</small>
                </div>
            </div>
        </div>

        <div class="col-sm-6 col-md-3">
            <div class="card">
                <div class="card-body">
                    <div class="h1 text-warning text-right mb-4">
                        <i class="icon-wallet"></i>
                    </div>
                    <div class="text-value-lg">&pound; -</div>
                    <small class="text-muted text-uppercase font-weight-bold">Revenue this week</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">Job's Today</div>
        <div class="card-body">
            <table class="table table-responsive-sm table-hover">
                <thead>
                <tr>
                    <th>Date</th>
                    <th>Pick Up</th>
                    <th>Drop Off</th>
                    <th>Driver</th>
                    <th>Vehicle</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                    <tr>
                        <td colspan="8">No jobs today</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
<script type="text/javascript">
    // Display time on dashboard
    if (document.getElementById('time')) {
        (function () {
            function checkTime(i) {
                return (i < 10) ? "0" + i : i;
            }
            function startTime() {
                var today = new Date(),
                    h = checkTime(today.getHours()),
                    m = checkTime(today.getMinutes()),
                    s = checkTime(today.getSeconds());
                document.getElementById('time').innerHTML = h + ":" + m + ":" + s;
                t = setTimeout(function () {
                    startTime()
                }, 500);
            }
            startTime();
        })();
    }
</script>
{% endblock %}